@code {
    private string userRole;

    protected override async Task OnInitializedAsync()
    {
        userRole = await AuthService.GetRole();
        await GuardarRolEnAlmacenamientoLocal(userRole);
    }

    private async Task GuardarRolEnAlmacenamientoLocal(string rol)
    {
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "Role", rol);
    }
}
